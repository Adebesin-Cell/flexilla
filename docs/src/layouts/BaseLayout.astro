---
import SEO from "./SEO.astro"
import {type SeoType} from "@/types/index"
import "@assets/css/global.css";
interface Props {
  seo:SeoType
}

const { seo } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO seo={seo}/>
    <script is:inline src="/load.theme.js"></script>
    <!-- Google tag (gtag.js) -->
    <script is:inline
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-4041S1SLCY"></script>
    <script is:inline type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-4041S1SLCY");
    </script>
  </head>
  <body
    class="overflow-hidden overflow-y-auto bg-white dark-bg-zinc950 text-zinc7 dark-text-zinc3"
  >
    <slot />
  </body>
</html>
<script>
  import "@assets/js/theme";
</script>
