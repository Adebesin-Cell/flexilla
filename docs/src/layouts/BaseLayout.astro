---
import SEO from "./SEO.astro"
import {type SeoType} from "@/types/index"
import "@assets/css/global.css";
interface Props {
  seo:SeoType,
}

const { seo } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO seo={seo}>
      <link rel="sitemap" href="/sitemap-index.xml" />
    </SEO>
    <script is:inline>
      const docEl = document.documentElement;
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };
  const isDark = getThemePreference() === "dark";
  docEl.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = docEl.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(docEl, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
    </script>
    <!-- Google tag (gtag.js) -->
    <script is:inline
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-4041S1SLCY"></script>
    <script is:inline type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-4041S1SLCY");
    </script>
  </head>
  <body
    class="overflow-x-hidden overflow-y-auto bg-white dark-bg-zinc950 text-zinc7 dark-text-zinc3"
  >
    <slot />
  </body>
</html>
<script>
  import "@assets/js/theme";
</script>
